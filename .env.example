# Environment template for RAG MCP Server
# Copy this file to .env and configure your settings

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# OpenAI API key for embeddings (required)
OPENAI_API_KEY=sk-proj-your-openai-key-here

# Tavily API key for web search (required)
TAVILY_API_KEY=tvly-your-tavily-key-here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Vector database storage path
VECTOR_STORE_PATH=./data

# ChromaDB collection name
COLLECTION_NAME=rag_documents

# =============================================================================
# SEARCH PARAMETERS
# =============================================================================

# Minimum similarity score for search results (0.0-1.0)
SIMILARITY_THRESHOLD=0.75

# Default number of search results to return
MAX_RESULTS_DEFAULT=10

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum retry attempts for API calls
MAX_RETRIES=3

# General request timeout in seconds
TIMEOUT_SECONDS=30

# Web search specific timeout in seconds
WEB_SEARCH_TIMEOUT=45

# Maximum concurrent document processing
MAX_CONCURRENCY=5

# =============================================================================
# API QUOTAS AND LIMITS
# =============================================================================

# Daily Tavily API quota limit
TAVILY_QUOTA_LIMIT=1000

# Rate limiting: max requests per minute
RATE_LIMIT_REQUESTS=100

# Rate limiting: time window in seconds
RATE_LIMIT_WINDOW=60